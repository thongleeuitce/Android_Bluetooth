<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8">

        <ImageView
            android:id="@+id/imageViewIcon"
            android:layout_width="@dimen/margin_60"
            android:layout_height="@dimen/margin_60"
            android:contentDescription="@null"
            android:src="@drawable/logo"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_alignTop="@+id/imageViewIcon"
            android:layout_toRightOf="@+id/imageViewIcon"
            android:layout_toEndOf="@+id/imageViewIcon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_16"/>

            <TextView
                android:id="@+id/txtv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtv_title"
                android:layout_marginTop="@dimen/margin_5"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/textSize_14"/>

            <TextView
                android:id="@+id/txtv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtv_code"
                android:layout_marginTop="@dimen/margin_5"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/textSize_14"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>